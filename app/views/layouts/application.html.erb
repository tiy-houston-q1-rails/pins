<!DOCTYPE html>
<html>
<head>
  <title>Pins</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if @current_user %>
    <p> Hi <%= @current_user.username %></p>
    <p><%= link_to "Sign Out", sign_out_path %></p>
  <% end %>

  <% if alert %>
    <p><%= alert %></p>
  <% end %>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
